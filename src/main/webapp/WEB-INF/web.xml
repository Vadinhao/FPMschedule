<web-app version="3.0">
    <display-name>FMP Schedule</display-name>


    <!--Welcome page-->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/view/errorPage.jsp</location>
    </error-page>



    <!--DataBase connection resources-->
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/FPMSchedule</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>


    <filter>
        <filter-name>LanguageFilter</filter-name>
        <filter-class>controller.filter.LanguageFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>LanguageFilter</filter-name>
        <url-pattern>/view/language/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AuthorizationFilter</filter-name>
        <filter-class>controller.filter.AuthorizationFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <url-pattern>/view/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>RoleFilter</filter-name>
        <filter-class>controller.filter.RoleFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>RoleFilter</filter-name>
        <url-pattern>/view/admin/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>DispatcherServlet</servlet-name>
        <servlet-class>controller.servlet.DispatcherServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DispatcherServlet</servlet-name>
        <url-pattern>/view/*</url-pattern>
    </servlet-mapping>

</web-app>